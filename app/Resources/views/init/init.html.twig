{% extends 'base.html.twig' %}
{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-12 center"> 
				<h3>Seleccione su colegio</h3>	
			</div>
		</div>
		<div class="container">
			{% for empresa in empresas %}
			{% if empresa.ifmovil %}
				<a class="row middle colegio" href="{{ path('init')}}/{{ empresa.getCempre() }}">
					<div class="col-4 center colegio-logo">
						<figure>
							{% set logo = empresa.getImage()|split('/') %}
							{% set url_logo = logo[0]~"/"~logo[1]~"/"~logo[2] %}
							<img src="{{ asset("bundles/app/img/"~url_logo) }}" alt="{{empresa.getNempre()}}" width="50">
						</figure>
					</div>
					<div class="col-8 ">
						{{empresa.getNempre()}}
					</div>
				</a>
			{% else %}
				<a class="row middle colegio colegio-deactivate">
					<div class="col-4 center colegio-logo">
						<figure>
							{% set logo = empresa.getImage()|split('/') %}
							{% set url_logo = logo[0]~"/"~logo[1]~"/"~logo[2] %}
							<img src="{{ asset("bundles/app/img/"~url_logo) }}" alt="{{empresa.getNempre()}}" width="50">
						</figure>
					</div>
					<div class="col-8 ">
						{{empresa.getNempre()}}
					</div>
				</a>
			{% endif %}
			{% endfor %}
			<div class="row">
				<div class="col-12 center">
					...
				</div>
			</div>
	</div>
</div>
{% endblock %}